DROP TABLE `dev`.`USER`;

CREATE TABLE `dev`.`USER` (
  `USER_PK` varchar(45) NOT NULL COMMENT 'UUID generated by application',
  `DISPLAY_NAME` varchar(50) NOT NULL COMMENT 'Unique display name to be shown on the pages',
  `GENDER` varchar(20) DEFAULT NULL COMMENT 'Gender could be\nMALE\nFEMALE\nMALE2FEMALE - Male at birth but Femaile\nFEMALE2MALE - Female at birth but Male\nDNWTR - Do Not Wish To Reveal\nNULL - unanswered',
  `BIRTH_YEAR` int(4) DEFAULT NULL COMMENT 'Four digit year of birth',
  `BIRTH_MONTH` int(2) DEFAULT NULL COMMENT '2 digit month of birth',
  `CREATE_TIME` TIMESTAMP(6) NULL DEFAULT NULL,
  `MODIFY_TIME` TIMESTAMP(6) NULL DEFAULT NULL,
  PRIMARY KEY (`USER_PK`),
  UNIQUE KEY `DISPLAY_NAME_UNIQUE` (`DISPLAY_NAME`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COMMENT='Table to hold user records. One row per user';
